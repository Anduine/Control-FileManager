<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="Control-TextBlock" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontFamily" Value="Franklin Gothic Book"/>
    <Style.Triggers>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Foreground" Value="{DynamicResource DisabledTextColor}"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style TargetType="TextBlock" BasedOn="{StaticResource Control-TextBlock}"/>

  <Style x:Key="Control-TextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
    <Setter Property="Background" Value="{DynamicResource PanelBgColor}"/>
    <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
    <Setter Property="CaretBrush" Value="{DynamicResource TextColor}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontFamily" Value="Franklin Gothic Book"/>
  </Style>

  <Style TargetType="TextBox" BasedOn="{StaticResource Control-TextBox}"/>

</ResourceDictionary>